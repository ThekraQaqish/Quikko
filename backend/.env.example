# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_USER=your_db_username           # اسم المستخدم لقاعدة البيانات
DB_PASSWORD=your_db_password       # كلمة المرور لقاعدة البيانات
DB_HOST=localhost                  # اسم أو عنوان السيرفر، مثال: localhost أو db.example.com
DB_PORT=5432                        # بورت قاعدة البيانات، عادة 5432 لـ PostgreSQL
DB_NAME=your_db_name               # اسم قاعدة البيانات

# ===============================
# PAYPAL CONFIGURATION
# ===============================
PAYPAL_CLIENT_ID=your_paypal_client_id       # PayPal Client ID
PAYPAL_CLIENT_SECRET=your_paypal_client_secret # PayPal Secret Key
PAYPAL_MODE=sandbox                           # sandbox للبيئة التجريبية، live للبيئة الحقيقية

# ===============================
# JWT CONFIGURATION
# ===============================
JWT_SECRET=your_super_secret_key     # المفتاح السري لتوقيع JWT، اجعله طويل وعشوائي
JWT_EXPIRES_IN=60d                   # مدة صلاحية التوكن، هنا شهرين (60 يوم)

